<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:hollow_out_padding="18dp"
            app:hollow_out_shape="round_corner"
            app:layout_constraintTop_toTopOf="parent" />

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:hollow_out_color="#90F2F2F2"
            app:hollow_out_round_corner_stroke="2dp"
            app:layout_constraintTop_toBottomOf="@id/image1" />

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image_local"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image"
            app:hollow_out_padding_horizontal="0dp"
            app:hollow_out_round_corner="20dp"
            app:hollow_out_round_corner_color="#FF6347"
            app:hollow_out_round_corner_stroke="3dp"
            app:layout_constraintTop_toBottomOf="@id/image2" />

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image_net"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:hollow_out_shape="rectangle"
            app:layout_constraintTop_toBottomOf="@id/image_local" />

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:hollow_out_shape="oval"
            app:layout_constraintTop_toBottomOf="@id/image_net" />

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image6"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:hollow_out_shape="rectangle"
            app:layout_constraintTop_toBottomOf="@id/image5" />

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image7"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:hollow_out_shape="circle"
            app:layout_constraintTop_toBottomOf="@id/image6" />

        <com.xuie0000.hollowout.drawable.HollowOutImageView
            android:id="@+id/image8"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image"
            app:hollow_out_padding_horizontal="0dp"
            app:hollow_out_shape="arc"
            app:layout_constraintTop_toBottomOf="@id/image7" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/next"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
